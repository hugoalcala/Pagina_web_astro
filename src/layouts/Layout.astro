---
// src/layouts/Layout.astro
// Props: Define las variables que las páginas que usen este layout deben proveer.
// Aquí solo necesitamos el título.
const { title = 'Batman Fan Site' } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <style>
        /* Estilos globales para la web */
        body { font-family: 'Arial', sans-serif; margin: 0; padding: 0; background-color: #1a1a1a; color: white; }
        main { min-height: 80vh; padding: 20px; max-width: 1200px; margin: 0 auto; }

        /* Header Style */
        .header { background-color: #000; color: #f7d354; padding: 15px 20px; display: flex; justify-content: space-between; align-items: center; border-bottom: 3px solid #f7d354; }
        .header a { color: white; text-decoration: none; font-weight: bold; padding: 8px 15px; }
        .header a:hover { color: #f7d354; }

        /* Footer Style */
        .footer { 
            background-color: #000; 
            color: #888; 
            text-align: center; 
            padding: 20px; 
            margin-top: 40px; 
            border-top: 1px solid #333; 
            font-size: 0.9em;
        }
    </style>
  </head>
  <body>
    <header class="header">
        <div>
            <a href="/batman">BATMAN</a>
            <a href="/enemigos">ENEMIGOS</a>
            <a href="/aliados">ALIADOS</a>
        </div>
        <span style="font-size: 1.5em; color: #f7d354;">El Caballero Oscuro</span>
    </header>

    <main>
      <slot />
    </main>

    <footer class="footer">
      <p>
        <a href="https://batmanapi.com/doc/batman-api/" target="_blank" style="color: #f7d354;">Batman API</a>.
      </p>
      <p>&copy; {new Date().getFullYear()} U-Tad desarrollo de aplicaciones web.</p>
    </footer>
  </body>
</html>