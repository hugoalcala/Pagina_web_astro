<style>
    .gadgets-container {
        padding: 20px;
        max-width: 1400px;
        margin: 0 auto;
    }

    h1 {
        text-align: center;
        color: #f7d354;
        font-size: 3rem;
        margin-bottom: 20px;
        text-transform: uppercase;
        letter-spacing: 3px;
        text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.7);
    }

    .intro {
        text-align: center;
        font-size: 1.2rem;
        color: #ccc;
        max-width: 800px;
        margin: 0 auto 50px;
        line-height: 1.6;
    }

    .grid-gadgets {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 30px;
        margin-top: 40px;
    }

    .card-gadget {
        background: linear-gradient(145deg, #1a1a1a, #2d2d2d);
        border: 2px solid #f7d354;
        border-radius: 15px;
        padding: 30px;
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.5);
    }

    .card-gadget::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(247, 211, 84, 0.1) 0%, transparent 70%);
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .card-gadget:hover::before {
        opacity: 1;
    }

    .card-gadget:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 15px 40px rgba(247, 211, 84, 0.3);
        border-color: #fff;
    }

    .gadget-image {
        width: 100%;
        height: 200px;
        margin-bottom: 20px;
        border-radius: 10px;
        overflow: hidden;
        position: relative;
        background: linear-gradient(135deg, #2d2d2d, #1a1a1a);
    }

    .gadget-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
        filter: brightness(0.8) contrast(1.1);
    }

    .card-gadget:hover .gadget-image img {
        transform: scale(1.1);
        filter: brightness(1) contrast(1.2);
    }

    .card-gadget h3 {
        color: #f7d354;
        font-size: 1.6rem;
        margin-bottom: 15px;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .descripcion {
        color: #e0e0e0;
        line-height: 1.7;
        font-size: 1rem;
        margin-bottom: 20px;
        text-align: center;
    }

    .caracteristicas {
        display: flex;
        justify-content: center;
        gap: 10px;
        flex-wrap: wrap;
    }

    .tag {
        background-color: rgba(247, 211, 84, 0.2);
        color: #f7d354;
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: bold;
        border: 1px solid rgba(247, 211, 84, 0.4);
        transition: all 0.3s ease;
    }

    .card-gadget:hover .tag {
        background-color: rgba(247, 211, 84, 0.3);
        border-color: #f7d354;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2rem;
        }

        .grid-gadgets {
            grid-template-columns: 1fr;
        }

        .intro {
            font-size: 1rem;
        }
    }
</style>
