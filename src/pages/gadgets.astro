---
import Layout from '../layouts/Layout.astro';
import GadgetCard from '../components/GadgetCard.astro';
import BackButton from '../components/BackButton.astro';
---

<Layout title="Gadgets - Batman">
    <div class="top-gadgets-section">
        <h2>Top 3 Gadgets Más Usados</h2>
        <div class="top-gadgets-grid">
            <GadgetCard nombre="Batarang" imagen="/batarang.webp" descripcion="Proyectil con forma de murciélago. Existe en múltiples variantes: explosivo, eléctrico, de rastreo y control remoto." caracteristicas={["Arma arrojadiza", "Versátil"]} />
            <GadgetCard nombre="Cinturón de Utilidades" imagen="/cinturon_batman.jpg" descripcion="Contiene todos sus gadgets en compartimentos especializados. Hecho de aleación ligera y resistente." caracteristicas={["Almacenamiento", "Icónico"]} />
            <GadgetCard nombre="Pistola de Gancho" imagen="/Pistola_Gancho_Batman.webp" descripcion="Dispositivo de agarre que dispara un cable de alta resistencia para escalar edificios y moverse rápidamente." caracteristicas={["Movilidad", "Esencial"]} />
        </div>
    </div>
    <div class="gadgets-container">
        <h1>Arsenal de Batman</h1>
        <p class="intro">El Caballero Oscuro cuenta con el arsenal tecnológico más avanzado del mundo, cortesía de Wayne Enterprises.</p>
        <div class="grid-gadgets">

            <!-- Usando GadgetCard para cada gadget -->
            <GadgetCard nombre="Batarang" descripcion="Proyectil con forma de murciélago. Existe en múltiples variantes: explosivo, eléctrico, de rastreo y control remoto." caracteristicas={["Arma arrojadiza", "Versátil"]} />
            <GadgetCard nombre="Capa de Planeo" descripcion="Capa reforzada con fibra de memoria que se endurece formando alas, permitiendo planear sobre Gotham." caracteristicas={["Movilidad", "Protección"]} />
            <GadgetCard nombre="Pistola de Gancho" descripcion="Dispositivo de agarre que dispara un cable de alta resistencia para escalar edificios y moverse rápidamente." caracteristicas={["Movilidad", "Esencial"]} />
            <GadgetCard nombre="Cinturón de Utilidades" descripcion="Contiene todos sus gadgets en compartimentos especializados. Hecho de aleación ligera y resistente." caracteristicas={["Almacenamiento", "Icónico"]} />
            <GadgetCard nombre="Cápsulas de Humo" descripcion="Pequeñas esferas que liberan humo denso para crear cortinas de cobertura o escapar de situaciones peligrosas." caracteristicas={["Táctica", "Escape"]} />
            <GadgetCard nombre="Batsuit" descripcion="Traje blindado de kevlar y titanio que protege contra armas de fuego, cuchillos y explosivos." caracteristicas={["Armadura", "Protección"]} />
            <GadgetCard nombre="Secuenciador Criptográfico" descripcion="Dispositivo de hackeo capaz de descifrar códigos, abrir cerraduras electrónicas y acceder a sistemas de seguridad." caracteristicas={["Tecnología", "Infiltración"]} />
            <GadgetCard nombre="Visión de Detective" descripcion="Sistema de lentes en la capucha que permite visión nocturna, térmica y análisis forense en tiempo real." caracteristicas={["Investigación", "Análisis"]} />
            <GadgetCard nombre="Dispositivo EMP" descripcion="Generador de pulso electromagnético que desactiva equipos electrónicos en un radio determinado." caracteristicas={["Electrónica", "Disrupción"]} />
            <GadgetCard nombre="Gel Explosivo" descripcion="Compuesto adhesivo que se aplica en superficies y se detona remotamente para crear aberturas o destruir obstáculos." caracteristicas={["Demolición", "Táctica"]} />
            <GadgetCard nombre="Rebreather" descripcion="Sistema de respiración compacto que permite permanecer bajo el agua o en ambientes tóxicos por períodos prolongados." caracteristicas={["Supervivencia", "Adaptación"]} />
            <GadgetCard nombre="Batcomputadora Remota" descripcion="Interfaz portátil conectada a la supercomputadora de la Batcueva para análisis y coordinación en campo." caracteristicas={["Tecnología", "Comunicación"]} />
            <GadgetCard nombre="Batarangs Eléctricos" descripcion="Versión del batarang que emite una descarga eléctrica al impacto, incapacitando temporalmente al objetivo." caracteristicas={["Arma", "No letal"]} />
            <GadgetCard nombre="Lanzador de Línea" descripcion="Dispara cables en dos direcciones opuestas creando una línea de tirolesa para cruzar grandes distancias." caracteristicas={["Movilidad", "Travesía"]} />
            <GadgetCard nombre="Anillo de Kryptonita" descripcion="Regalo de Superman. Anillo que contiene kryptonita para ser usado solo en caso de que Superman se vuelva una amenaza." caracteristicas={["Emergencia", "Contingencia"]} />

                </Layout>

                <style>
                .top-gadgets-grid {
                    display: grid;
                    grid-template-columns: repeat(3, 1fr);
                    gap: 32px;
                    margin-bottom: 40px;
                }
                .grid-gadgets {
                    display: grid;
                    grid-template-columns: repeat(3, 1fr);
                    gap: 32px;
                }
                .gadgets-container {
                }
                
                @media (max-width: 1024px) {
                    .top-gadgets-grid,
                    .grid-gadgets {
                        grid-template-columns: repeat(2, 1fr);
                        gap: 24px;
                    }
                }

                @media (max-width: 768px) {
                    .top-gadgets-grid,
                    .grid-gadgets {
                        grid-template-columns: 1fr;
                        gap: 16px;
                        margin-bottom: 20px;
                    }
                    .gadgets-container h1 {
                        font-size: 1.8rem;
                    }
                    .intro {
                        font-size: 0.95rem;
                    }
                }

                @media (max-width: 480px) {
                    .top-gadgets-grid,
                    .grid-gadgets {
                        grid-template-columns: 1fr;
                        gap: 12px;
                    }
                    .gadgets-container h1 {
                        font-size: 1.4rem;
                    }
                    .intro {
                        font-size: 0.85rem;
                    }
                }
                </style>
